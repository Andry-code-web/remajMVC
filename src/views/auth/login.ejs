<section class="login_general" id="login_general">
<div class="contenido_login" id="contenedor_login">
  <canvas id="particleCanvas"></canvas>
  <div class="login-box">
    <h1>Iniciar Sesión</h1>
    <form id="loginForm">
      <div class="user-box">
        <input type="text" id="usuario" name="usuario" required>
        <label for="usuario">Nombre de usuario</label>
      </div>
      <div class="user-box">
        <input type="password" id="contrasena" name="contrasena" required>
        <label for="contrasena">Contraseña</label>
      </div>
      <button type="submit" class="submit-btn">
        Iniciar sesión
      </button>
    </form>
    <p class="register-link">¿No tienes una cuenta? <a href="/auth/register">Regístrate</a></p>
  </div>
</div>
</section>

  <!-- script particulas login -->
<script type="module" src="/js/componentes/network_login.js"></script>
<link rel="stylesheet" href="/css/login/login.css">

<script type="module">
  import {
    NetworkAnimationL
  } from '../../js/componentes/network_login.js';
  const canvas = document.getElementById("particleCanvas");
  const networkAnimationL = new NetworkAnimationL(canvas);

  document.getElementById('loginForm').addEventListener('submit', async function(e) {
    e.preventDefault();

    const formData = new FormData(this);
    const data = Object.fromEntries(formData);

    try {
      const response = await fetch('/auth/loginP', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify(data)
      });

      if (response.redirected) {
        window.location.href = response.url;
      } else {
        const responseData = await response.json();
        throw new Error(responseData.message);
      }
    } catch (error) {
      alert(error.message);
    }
  });
</script>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const header = document.getElementById('header');
    const loginSection = document.getElementById('login_general');

    // Verificar si el login está visible
    if (loginSection) {
      header.style.color = '#ffffff'; // Cambiar al color deseado (Blanco)
    } else {
      header.style.color = 'black'; // Color por defecto si no es el login
    }
  });
</script>
