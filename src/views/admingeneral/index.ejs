<div class="remaju-contenedor">
    <div class="remaju-particulas" id="remaju-particulas"></div>
    <div class="remaju-tarjeta-inicio">
        <div class="remaju-titulo">REMAJU Administración</div>
        <form class="remaju-formulario">
            <div class="remaju-campo">
                <label for="remaju-usuario" class="remaju-etiqueta">Usuario</label>
                <input type="text" id="remaju-usuario" placeholder="Ingrese su usuario" class="remaju-entrada" required>
            </div>
            <div class="remaju-campo">
                <label for="remaju-contrasena" class="remaju-etiqueta">Contraseña</label>
                <input type="password" id="remaju-contrasena" placeholder="Ingrese su contraseña" class="remaju-entrada" required>
            </div>
            <button type="submit" class="remaju-boton-inicio">Iniciar Sesión</button>
        </form>
    </div>
</div>
<link rel="stylesheet" href="/css/login_admin/login_admin.css">
<script>
    // Función para crear partículas (estrellas) en movimiento
    function crearParticulasRemaju() {
        const contenedor = document.getElementById('remaju-particulas');
        const numeroParticulas = 50;

        for (let i = 0; i < numeroParticulas; i++) {
            const particula = document.createElement('div');
            particula.className = 'remaju-particula';
            
            // Posición aleatoria
            particula.style.left = `${Math.random() * 100}%`;
            particula.style.top = `${Math.random() * 100}%`;
            
            // Tamaño aleatorio
            const tamano = Math.random() * 3 + 1;
            particula.style.width = `${tamano}px`;
            particula.style.height = `${tamano}px`;
            
            // Animación con retraso aleatorio
            particula.style.animationDelay = `${Math.random() * 3}s`;
            
            contenedor.appendChild(particula);
        }
    }

    // Ejecutar la función cuando se carga el documento
    document.addEventListener('DOMContentLoaded', crearParticulasRemaju);
</script>