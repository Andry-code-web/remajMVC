<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Iniciar Sesión</title>
    <link rel="stylesheet" href="/css/login_admin/login_admin.css">
    <!-- Incluir SweetAlert2 CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
</head>
<body>
    <div class="remaju-contenedor">
        <div class="remaju-particulas" id="remaju-particulas"></div>
        <div class="remaju-tarjeta-inicio">
            <div class="remaju-titulo">REMAJU Administración</div>
            <form class="remaju-formulario" method="POST" action="/admin/login">
                <div class="remaju-campo">
                    <label for="remaju-usuario" class="remaju-etiqueta">Correo</label>
                    <input type="text" id="remaju-usuario" name="correo" placeholder="Ingrese su correo" class="remaju-entrada" required>
                </div>
                <div class="remaju-campo">
                    <label for="remaju-contrasena" class="remaju-etiqueta">Contraseña</label>
                    <input type="password" id="remaju-contrasena" name="contrasena" placeholder="Ingrese su contraseña" class="remaju-entrada" required>
                </div>
                <button type="submit" class="remaju-boton-inicio">Iniciar Sesión</button>
            </form>
        </div>
    </div>
    
    <!-- Incluir SweetAlert2 JS -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.all.min.js"></script>
    <script>
        // Función para crear partículas (estrellas) en movimiento
        function crearParticulasRemaju() {
            const contenedor = document.getElementById('remaju-particulas');
            const numeroParticulas = 50;

            for (let i = 0; i < numeroParticulas; i++) {
                const particula = document.createElement('div');
                particula.className = 'remaju-particula';

                // Posición aleatoria
                particula.style.left = `${Math.random() * 100}%`;
                particula.style.top = `${Math.random() * 100}%`;

                // Tamaño aleatorio
                const tamano = Math.random() * 3 + 1;
                particula.style.width = `${tamano}px`;
                particula.style.height = `${tamano}px`;

                // Animación con retraso aleatorio
                particula.style.animationDelay = `${Math.random() * 3}s`;

                contenedor.appendChild(particula);
            }
        }

        // Ejecutar la función cuando se carga el documento
        document.addEventListener('DOMContentLoaded', () => {
            crearParticulasRemaju();

            // Mostrar SweetAlert si hay un mensaje de error
            <% if (error) { %>
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: '<%= error %>',
                    confirmButtonColor: '#3085d6',
                    confirmButtonText: 'Entendido'
                });
            <% } %>
        });
    </script>
</body>
</html>

