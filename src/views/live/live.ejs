<div class="modal" id="modal">
  <div class="modal-content">
      <span class="close-modal" onclick="closeModal()">&times;</span>
      <div id="modal-body"></div>
  </div>
</div>

<script>
  let lastScrollTop = 0; // Posición de scroll anterior
  const header = document.getElementById('header');
  const liveContainer = document.getElementById('contenedor_live');

  window.addEventListener('scroll', () => {
    const currentScrollTop = window.scrollY || document.documentElement.scrollTop;

    // Si el scroll es hacia abajo y supera la posición del encabezado, oculta el encabezado
    if (currentScrollTop > lastScrollTop && currentScrollTop > liveContainer.offsetTop) {
      header.style.top = '-100px'; // Mueve el encabezado hacia arriba (fuera de la vista)
    } else {
      // Si el scroll es hacia arriba, muestra el encabezado
      header.style.top = '0'; // Vuelve el encabezado a su posición original
    }
    
    lastScrollTop = currentScrollTop <= 0 ? 0 : currentScrollTop; // Evita valores negativos
  });
</script>

  <!-- script live -->
<script src="/js/script_live.js"></script>

</body>
</html>