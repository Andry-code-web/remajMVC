<section>
    <div id="auction-grid" class="auction-grid">
        <!-- Las tarjetas de subasta se generarán dinámicamente aquí -->
    </div>

    <!-- Modal de Características -->
    <div id="detailsModal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h2>Características del Vehículo</h2>
                <button class="close-modal" onclick="closeModal('details')">&times;</button>
            </div>
            <div id="detailsContent" class="details-content">
                <!-- El contenido se generará dinámicamente -->
            </div>
        </div>
    </div>

    <!-- Modal de Galería -->
    <div id="galleryModal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h2>Galería de Imágenes</h2>
                <button class="close-modal" onclick="closeModal('gallery')">&times;</button>
            </div>
            <div class="image-slider">
                <div id="sliderContainer" class="slider-container">
                    <!-- Las imágenes se generarán dinámicamente -->
                </div>
                <button class="slider-button prev" onclick="changeSlide(-1)">&#10094;</button>
                <button class="slider-button next" onclick="changeSlide(1)">&#10095;</button>
                <div id="sliderIndicators" class="slider-indicators"></div>
            </div>
        </div>
    </div>

</section>

